    <TextView
        android:id="@+id/tv_company_telephone_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Telephone..........."
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_telephone" />


    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="About the company:"
        android:textColor="@color/white"
        android:textSize="@dimen/headline2"
        app:layout_constraintStart_toStartOf="@+id/tv_company_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_telephone_details" />

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/tv_company_about_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="A glossary is a list of words and their meanings (A list of terms in a particular domain of knowledge – for example, a medical domain, or a banking domain – with their definitions.). The alphabetical listing of difficult words in the back of a book is an example of a glossary, for example:
        Acute: Signifies a condition that begins abruptly and is sometimes severe, but the duration is short."
        android:textColor="@color/white"
        android:textSize="17sp"
        app:colorClickableText="@color/blue_icon_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_about"
        app:trimCollapsedText="@string/read_more"
        app:trimExpandedText="@string/read_less"
        app:trimLength="200"
        app:trimMode="trimModeLength" />
