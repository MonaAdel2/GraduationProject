<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.view.CompanyDetailsFragment"
    android:background="@color/background">


    <TextView
        android:id="@+id/tv_company_name_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="Company Name"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/headline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address:"
        android:textColor="@color/white"
        android:textSize="@dimen/headline2"
        app:layout_constraintStart_toStartOf="@+id/tv_company_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_name_details" />

    <TextView
        android:id="@+id/tv_company_address_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="Address ....................."
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_company_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
        android:id="@+id/tv_classfication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Classfication:"
        android:textColor="@color/white"
        android:textSize="@dimen/headline2"
        app:layout_constraintStart_toStartOf="@+id/tv_company_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_address_details" />

    <TextView
        android:id="@+id/tv_company_classfication_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Classfication.........."
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_classfication" />


    <TextView
        android:id="@+id/tv_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Telephone:"
        android:textColor="@color/white"
        android:textSize="@dimen/headline2"
        app:layout_constraintStart_toStartOf="@+id/tv_company_name_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_classfication_details" />

